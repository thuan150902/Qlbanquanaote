@model SanPham
<div class="col-lg-4 col-md-6 text-center strawberry" >
	<div class="single-product-item">
		<div class="product-image">
			<a href=""><img src="@Url.Content("../Products/Image/"+@Model.HinhAnhAvatar)" alt=""></a>
		</div>
		<h3>@Model.TenSanPham</h3>
		<a asp-action="ChiTietSanPham" asp-controller="Home" asp-route-masp="@Model.MaSanPham" style="color:#051922;">Chi Tiết Sản Phẩm</a>
		<p class="product-price"><span style="color:#051922">Giá bán: @Model.GiaBan Đồng</span> </p>
		<a asp-action="AddToCart" asp-controller="Cart" asp-route-maSanPham="@Model.MaSanPham" class="cart-btn"><i class="fas fa-shopping-cart"></i> Thêm vào giỏ hàng</a>
	</div>
</div>